export DFL_USER_HOSTNAME_CWD_PROMPT_COLOR="${yellow}"
export DFL_DB_MYSQL_PROMPT_COLOR="${magenta}"
export DFL_VIRTUALENV_PROMPT_COLOR="${cyan}"

PROMPT_USER_AND_HOSTNAME="${DFL_USER_HOSTNAME_USER_PROMPT_COLOR}\u${COLOR_OFF} @ ${DFL_USER_HOSTNAME_HOSTNAME_PROMPT_COLOR}\H${COLOR_OFF}"
PROMPT_USER_PATH="${DFL_USER_HOSTNAME_CWD_PROMPT_COLOR}\w${COLOR_OFF}"

CUSTOM_PS1="${PROMPT_HORIZONTAL_LINE}
${PROMPT_MEMORY}${PROMPT_BATTERY} ${PROMPT_DATABASE_STATUS}
${PROMPT_USER_AND_HOSTNAME} ${PROMPT_VIRTUALENV}
${PROMPT_RUBY_RBENV}${PROMPT_PYTHON_PYENV} ${PROMPT_GIT}${PROMPT_HG}
in ${PROMPT_USER_PATH}
$ "

export PS1="${CUSTOM_PS1}"
